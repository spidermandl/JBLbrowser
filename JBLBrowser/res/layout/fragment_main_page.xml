<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.textwebview.MainActivity" >

    <LinearLayout
        android:id="@+id/linear_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#b0e0e6"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/mImageView_Search"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_search_pre"
            android:clickable="true" />

        <AutoCompleteTextView
            android:id="@+id/net_address"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/main_netaddress_input_search"
            android:hint="@string/please_input_and_search"
            android:imeOptions="actionGo"
            android:paddingLeft="10dp"
            android:singleLine="true" />

        <ImageView
            android:id="@+id/mImageView_Code"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#ff4500"
            android:clickable="true" />

        <ImageView
            android:id="@+id/mImageView_Land"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#ffd700"
            android:clickable="true" />
    </LinearLayout>

    <com.jbl.browser.view.ProgressWebView
        android:id="@+id/mWebView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linear_top" >
    </com.jbl.browser.view.ProgressWebView>

    <include
        android:id="@+id/main_setting_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        layout="@layout/main_setting_panel"
        android:visibility="gone" >
    </include>

