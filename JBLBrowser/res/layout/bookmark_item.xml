<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_url_image"
        android:layout_width="@dimen/list_width"
        android:layout_height="@dimen/list_height"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        android:src="@drawable/refresh" />

    <LinearLayout
        android:id="@+id/ll_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_top"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/url_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_item_max" />

        <TextView
            android:id="@+id/url_address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_bottom"
            android:layout_marginTop="@dimen/padding_medium"
            android:lines="1"
            android:textSize="@dimen/font_size_item_min" />
    </LinearLayout>

</LinearLayout>