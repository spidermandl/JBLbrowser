<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jbl.browser.TextLoginActivity" >

   <LinearLayout android:layout_width="match_parent" android:layout_height="25dp" android:weightSum="9" 
       android:id="@+id/linear_top" android:layout_alignParentTop="true" android:layout_marginLeft="5dp">
       <ImageView android:id="@+id/login_mImageView_top" android:layout_weight="1" android:layout_width="0dp"
           android:layout_height="match_parent" android:background="#ffc0cb"/>
       <TextView android:id="@+id/login_mTextView_top" android:layout_width="0dp" android:layout_weight="7"
           android:layout_height="match_parent" />
       <ImageView android:id="@+id/login_mButton_top" android:layout_weight="1" android:layout_width="0dp"
           android:layout_height="match_parent" android:background="#ff00ff" android:layout_marginRight="2dp"/>
   </LinearLayout>
   
   <LinearLayout android:id="@+id/linear" android:layout_width="match_parent" android:weightSum="8"
       android:layout_height="25dp" android:layout_below="@+id/linear_top" android:layout_marginTop="10dp">
       <ImageView android:id="@+id/login_mImageViewBack_t" android:layout_weight="1" android:layout_width="0dp" 
           android:layout_height="match_parent" android:background="#adff2f"/>
       <ImageView android:id="@+id/login_mImageViewMain" android:layout_weight="6" android:layout_width="0dp" 
           android:layout_height="match_parent" android:background="#b22222"/>
       <Button android:id="@+id/login_mButton" android:layout_width="0dp" android:layout_weight="1" 
           android:layout_height="match_parent" android:background="#adff2f" android:text="注册"/>
   </LinearLayout>
   
   <WebView android:id="@+id/login_mWebView" android:layout_below="@+id/linear" android:layout_marginTop="20dp"
       android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/linear2"/>
   
   <LinearLayout android:layout_width="fill_parent" android:layout_height="40dp" android:id="@+id/linear2" 
        android:orientation="horizontal" android:layout_alignParentBottom="true" android:weightSum="5">
        <ImageView android:id="@+id/login_mImageViewBack" android:layout_width="0dp" android:layout_height="match_parent"
            android:background="#fffacd" android:layout_weight="1"/>
        <ImageView  android:id="@+id/login_mImageViewInto" android:layout_width="0dp" android:layout_height="match_parent" 
            android:background="#ffdab9" android:layout_weight="1"/>
        <ImageView  android:id="@+id/login_mImageViewHome" android:layout_width="0dp" android:layout_height="match_parent"
            android:background="#deb887" android:layout_weight="1"/>
        <ImageView  android:id="@+id/login_mImageViewChange" android:layout_weight="1" android:layout_width="0dp"
            android:layout_height="match_parent" android:background="#da70d6"/>
        <ImageView  android:id="@+id/login_mImageViewOption" android:layout_weight="1" android:layout_width="0dp" 
            android:layout_height="match_parent" android:background="#fffacd"/>
        
    </LinearLayout>

</RelativeLayout>
