<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@drawable/actionbar_searchview_bg"
    android:paddingLeft="5dip"
    android:paddingRight="5dip"
    android:paddingTop="6dip"
    android:id="@+id/top" >

    <EditText
        android:id="@+id/top_menu_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/barcode_inputbox_bg"
        android:drawableLeft="@drawable/default_search_icon"
        android:hint="@string/please_input_and_search" 
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/top_menu_qrcode"
        android:padding="2dip"
        android:textSize="14sp"
        android:layout_marginRight="5dip"/>

    <ImageView
        android:id="@id/top_menu_qrcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_centerVertical="true"
        android:src="@drawable/menu_qrcode_selector"
        android:layout_toLeftOf="@+id/top_menu_person"
        android:layout_marginRight="5dip"/>

    <ImageView
        android:id="@id/top_menu_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/menu_person_selector" />    
        
    <View android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="#FFD3D3D3"
        android:layout_below="@id/top_menu_search"
        android:layout_marginTop="6dip"/>

</RelativeLayout>