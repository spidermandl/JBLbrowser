<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <TextView android:id="@+id/set_content" android:layout_width="fill_parent" android:layout_height="wrap_content" android:lines="1"
       android:textStyle="bold" android:textSize="15dp"  android:gravity="center_vertical" android:layout_marginLeft="10dp"></TextView>
    <TextView android:id="@+id/size" android:layout_width="fill_parent" android:layout_height="wrap_content" android:textSize="12dp" android:textColor="#5c5c5c"
          android:layout_marginLeft="10dp" android:gravity="center_vertical" android:lines="1"/>
    <View android:id="@+id/line" android:layout_width="fill_parent" android:layout_height="1dp" android:background="#5c5c5c"/>"

</LinearLayout>
