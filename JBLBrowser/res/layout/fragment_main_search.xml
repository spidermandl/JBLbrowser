<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingLeft="5dip"
    android:paddingRight="5dip"
    android:paddingTop="6dip" >

    <EditText
        android:id="@+id/url_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/barcode_inputbox_bg"
        android:drawableLeft="@drawable/default_search_icon"
        android:hint="@string/please_input_and_search" 
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/control_search"
        android:textSize="14sp"
        android:padding="2dip"
        android:layout_marginRight="5dip"/>
    
    <TextView 
        android:id="@+id/control_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/url_search"
        android:layout_alignBottom="@id/url_search"
        android:gravity="center"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:textSize="14sp"
        android:clickable="true"
        android:background="@drawable/search_controll_selector"
        android:text="aaa">
        
    </TextView>        
    <View android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="#FFD3D3D3"
        android:layout_below="@id/url_search"
        android:layout_marginTop="6dip"/>

</RelativeLayout>